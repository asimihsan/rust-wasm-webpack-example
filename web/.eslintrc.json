{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "indent": [2, 4],
        "import/extensions": "off",
        "lines-between-class-members": "off",
        "max-classes-per-file": "off",
        "max-len": [2, {
            "code": 120
        }],
        "import/no-relative-packages": "off",
        "import/no-unresolved": "off",
	    "spaced-comment": "off"
    },
    "settings": {
        "import/resolver": {
            "webpack": {
                "config": "./webpack.common.js"
            }
        }
    }
}
